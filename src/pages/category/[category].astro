---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';

export async function getStaticPaths() {
  // In a real site, you'd fetch categories from your content collection
  return [
    {
      params: { category: 'politics' },
      props: { category: 'Politics' },
    },
    {
      params: { category: 'design' },
      props: { category: 'Design' },
    },
    {
      params: { category: 'technology' },
      props: { category: 'Technology' },
    },
  ];
}

const { category } = Astro.props;

// Simulate blog posts data (in a real site, this would be filtered from a content collection)
const allPosts = [
  {
    slug: 'the-intersection-of-politics-and-design',
    title: 'The Intersection of Politics and Design',
    description: 'Exploring how political movements have utilized design principles to communicate their message effectively throughout history.',
    pubDate: new Date('2023-11-15'),
    category: 'Politics',
    image: 'https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '6 min read'
  },
  {
    slug: 'censorship-in-digital-media',
    title: 'Censorship in Digital Media',
    description: 'A critical analysis of how censorship manifests in digital platforms and its implications for free speech.',
    pubDate: new Date('2023-10-28'),
    category: 'Politics',
    image: 'https://images.pexels.com/photos/6953525/pexels-photo-6953525.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '7 min read'
  },
  {
    slug: 'political-polarization-in-social-media',
    title: 'Political Polarization in Social Media',
    description: 'Investigating how social media algorithms contribute to political polarization and what can be done about it.',
    pubDate: new Date('2023-10-10'),
    category: 'Politics',
    image: 'https://images.pexels.com/photos/607812/pexels-photo-607812.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '8 min read'
  },
  {
    slug: 'ethical-considerations-in-ui-design',
    title: 'Ethical Considerations in UI Design',
    description: 'How designers should approach ethical dilemmas in user interface design to create more inclusive and responsible products.',
    pubDate: new Date('2023-11-10'),
    category: 'Design',
    image: 'https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '4 min read'
  },
  {
    slug: 'minimalism-in-web-design',
    title: 'Minimalism in Web Design',
    description: 'Why less continues to be more in the evolution of web design, and how to apply minimalist principles effectively.',
    pubDate: new Date('2023-10-20'),
    category: 'Design',
    image: 'https://images.pexels.com/photos/4050315/pexels-photo-4050315.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '3 min read'
  },
  {
    slug: 'principles-of-responsive-design',
    title: 'Principles of Responsive Design',
    description: 'A comprehensive look at the key principles that make responsive design effective in today\'s multi-device world.',
    pubDate: new Date('2023-10-05'),
    category: 'Design',
    image: 'https://images.pexels.com/photos/1779487/pexels-photo-1779487.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '5 min read'
  },
  {
    slug: 'the-rise-of-ai-in-content-creation',
    title: 'The Rise of AI in Content Creation',
    description: 'Examining how artificial intelligence is changing the landscape of content creation and what it means for creators.',
    pubDate: new Date('2023-11-05'),
    category: 'Technology',
    image: 'https://images.pexels.com/photos/8386440/pexels-photo-8386440.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '5 min read'
  },
  {
    slug: 'open-source-software-revolution',
    title: 'The Open Source Software Revolution',
    description: 'How open source has transformed software development and why it matters for the future of technology.',
    pubDate: new Date('2023-10-15'),
    category: 'Technology',
    image: 'https://images.pexels.com/photos/546819/pexels-photo-546819.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '6 min read'
  },
  {
    slug: 'blockchain-beyond-cryptocurrency',
    title: 'Blockchain Beyond Cryptocurrency',
    description: 'Exploring the potential applications of blockchain technology beyond cryptocurrency in various industries.',
    pubDate: new Date('2023-10-01'),
    category: 'Technology',
    image: 'https://images.pexels.com/photos/844124/pexels-photo-844124.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    readingTime: '7 min read'
  }
];

const filteredPosts = allPosts.filter(post => post.category === category);
---

<Layout title={`${category} | cssamurai`} description={`Articles about ${category.toLowerCase()} by cssamurai`}>
  <div class="max-w-2xl mb-12">
    <h1 class="text-4xl font-bold mb-4">{category}</h1>
    <p class="text-lg text-primary-700 dark:text-primary-300">
      {category === 'Politics' && 'Analysis and commentary on political movements, policy, and societal issues.'}
      {category === 'Design' && 'Exploring principles, trends, and case studies in design across various mediums.'}
      {category === 'Technology' && 'Insights on emerging technologies, digital trends, and their impact on society.'}
    </p>
  </div>
  
  <div class="mb-8">
    <div class="flex overflow-x-auto pb-2 -mx-2 space-x-2">
      <a 
        href="/blog" 
        class="inline-flex px-4 py-2 rounded-full bg-white dark:bg-primary-900 border border-primary-200 dark:border-primary-700 text-primary-700 dark:text-primary-300 hover:border-accent-400 dark:hover:border-accent-400 text-sm font-medium whitespace-nowrap transition-colors"
      >
        All Posts
      </a>
      <a 
        href="/category/politics" 
        class={`inline-flex px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap ${
          category === 'Politics' 
            ? 'bg-accent-600 text-white' 
            : 'bg-white dark:bg-primary-900 border border-primary-200 dark:border-primary-700 text-primary-700 dark:text-primary-300 hover:border-accent-400 dark:hover:border-accent-400 transition-colors'
        }`}
      >
        Politics
      </a>
      <a 
        href="/category/design" 
        class={`inline-flex px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap ${
          category === 'Design' 
            ? 'bg-accent-600 text-white' 
            : 'bg-white dark:bg-primary-900 border border-primary-200 dark:border-primary-700 text-primary-700 dark:text-primary-300 hover:border-accent-400 dark:hover:border-accent-400 transition-colors'
        }`}
      >
        Design
      </a>
      <a 
        href="/category/technology" 
        class={`inline-flex px-4 py-2 rounded-full text-sm font-medium whitespace-nowrap ${
          category === 'Technology' 
            ? 'bg-accent-600 text-white' 
            : 'bg-white dark:bg-primary-900 border border-primary-200 dark:border-primary-700 text-primary-700 dark:text-primary-300 hover:border-accent-400 dark:hover:border-accent-400 transition-colors'
        }`}
      >
        Technology
      </a>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {filteredPosts.map(post => (
      <PostCard post={post} />
    ))}
  </div>
</Layout>